{
    "name": "sc-camera-module",
    "version": "1.0.0",
    "description": "This is a templare repo that will create a Vite workflow to ease creation of Javascript modules with a dev server, GitHub Pages support and automated publishing to NPM.",
    "files": [
        "dist"
    ],
    "main": "./dist/sc-camera-module.umd.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/johnfmorton/sc-camera-module"
    },
    "module": "./dist/sc-camera-module.es.js",
    "unpkg": "./dist/sc-camera-module.es.js",
    "types": "./dist/sc-camera-module.d.ts",
    "exports": {
        ".": {
            "import": "./dist/sc-camera-module.es.js",
            "require": "./dist/sc-camera-module.umd.js"
        }
    },
    "scripts": {
        "clean": "rm -rf dist es demo",
        "dev": "vite --host 0.0.0.0 --port 8888",
        "vite-build": "vite build --config vite.demo.config.js",
        "build": "vite build --config vite.demo.config.js && vite build && tsc lib/sc-camera-module.ts --declaration --emitDeclarationOnly --outFile dist/sc-camera-module.d.ts",
        "preview": "vite preview",
        "project-setup": "node project-setup.js && npm install",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "workflow",
        "vite",
        "typescript",
        "npm",
        "github",
        "github-pages",
        "npm-publish"
    ],
    "author": "John F. Morton <john@johnfmorton.com> (https://supergeekery.com)",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "postcss": "^8.4.21",
        "tailwindcss": "^3.2.7",
        "typescript": "^4.9.5",
        "vite": "^4.1.3",
        "vite-plugin-banner": "^0.7.0"
    }
}
